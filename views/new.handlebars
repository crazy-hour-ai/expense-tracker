<div class="row mt-3">

  <div class="col-md-6 m-auto">

    <div class="card card-body">

      <label>
        <font class="text-danger">*</font>必填欄位
      </label>
      <h1 class="text-center mb-3">請修改您的支出 </h1>

      {{!-- {{>message}} --}}

      <form action="/records" method="post">
        <div class="form-group">
          <font class="text-danger">*</font>
          <label for="name">名稱</label>
          <input type="text" name="name" id="name" value="{{name}}" placeholder="Enter Name" class="form-control">
        </div>
        <div class="form-group">
          <font class="text-danger">*</font>
          <label for="date">日期</label>
          <input type="date" name="date" id="date" value="{{date}}" placeholder="Enter date" class="form-control">
        </div>
        <div class="form-group">
          <font class="text-danger">*</font>
          <label for="category">類別</label>

          <select name="category" id="sort-button" class="form-control">
            {{#each category}}

            <option value="{{this.category}}" {{#if asc}}selected{{/if}}>
              <i class="{{this.icon}}"></i>{{this.category}}
            </option>
            {{/each}}

          </select>
        </div>
        <div class="form-group">
          <font class="text-danger">*</font>
          <label for="amount">金額 $</label>
          <input type="number" name="amount" id="amount" value="{{amount}}" placeholder="" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary btn-block">送出</button>
      </form>


    </div>

  </div>

</div>